generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int        @id @default(autoincrement()) @map("id_usuario")
  idUserCreation  Int?       @map("id_usuario_criacao")
  fullName        String     @map("nome_completo")
  documento       String     @map("cpf_cnpj")
  phone           String?    @map("telefone")
  status          Boolean    @map("status")
  login           String     @map("login")
  email           String     @map("email")
  password        String     @map("password")
  role            Role       @map("role")
  createdAt       DateTime   @default(now()) @map("data_criacao")
  updatedAt       DateTime   @updatedAt @map("updated_at")
}

enum Role {
  admin
  customer
}